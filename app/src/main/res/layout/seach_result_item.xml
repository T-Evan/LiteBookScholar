<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardElevation="0dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:id="@+id/relative_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image_book"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@drawable/book_list_image_shape"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/image_book"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="10"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_book_title"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/image_book"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_book_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_book_author"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/image_book"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_book_index_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_book_publish"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/image_book"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_book_can_borrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/borrow_shape"
            android:padding="5dp"
            android:text="可借"
            android:textColor="@color/colorAccent"
            android:visibility="invisible" />
    </RelativeLayout>

</android.support.v7.widget.CardView>